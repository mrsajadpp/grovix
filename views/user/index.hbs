<style>
    .searchContainer {
        width: 100%;
        height: 40vh;
        display: flex;
        background: url('https://www.grovixlab.com/img/background-min.png') no-repeat center center;
        background-size: cover;
    }

    .searchContainer .searchArea {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.61);
        backdrop-filter: blur(3px);
    }

    .searchContainer .searchArea .inputBox {
        display: flex;
        width: 75%;
        max-width: 600px;
        height: 45px;
        overflow: hidden;
        border-radius: 85px;
        border: #ccc 1px solid;
    }

    .header {
        background: transparent !important;
        border: none !important;
        transition: background-color 0.3s, border-bottom 0.3s;
    }

    .headerMobile {
        background: transparent !important;
        border: none !important;
        transition: background-color 0.3s, border-bottom 0.3s;
    }

    .header.scrolled {
        background: #fff !important;
        border-bottom: 1px solid #ccc !important;
    }

    .headerMobile.scrolled {
        background: #fff !important;
        border-bottom: 1px solid #ccc !important;
    }

    .searchContainer .searchArea .inputBox input {
        width: calc(100% - 70px);
        height: 100%;
        border: none;
        padding-left: 20px;
        font-size: 18px;
        display: flex;
        align-items: center;
    }

    .searchContainer .searchArea .inputBox button {
        width: 70px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: none;
        background-color: #ccc;
    }

    .header .hRight svg,
    .headerMobile .hRight svg,
    .headerMobile .hLeft svg {
        fill: #fff;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const header = document.querySelector('.header');
        const mobileHeader = document.querySelector('.headerMobile');
        const icons = document.querySelectorAll('.headerMobile .hLeft svg, .header .hRight svg, .headerMobile .hRight svg');
        const logo = document.querySelector('.header .hLeft img');
        const mobileLogo = document.querySelector('.headerMobile .logo img');

        window.addEventListener('scroll', function () {
            if (window.scrollY > window.innerHeight * 0.1) {
                header.classList.add('scrolled');
                mobileHeader.classList.add('scrolled');
                icons.forEach(icon => {
                    icon.style.fill = '#000';
                });
                logo.src = '/img/logo.png'; // Change to the dark logo
                mobileLogo.src = '/img/logo.png'; // Change to the dark logo
            } else {
                header.classList.remove('scrolled');
                mobileHeader.classList.remove('scrolled');
                icons.forEach(icon => {
                    icon.style.fill = '#fff';
                });
                logo.src = '/img/logo-white.png'; // Change to the light logo
                mobileLogo.src = '/img/logo-white.png'; // Change to the light logo
            }
        });
    });
</script>

