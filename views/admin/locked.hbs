<script>
    function confirmDelete(articleId) {
        var userInput = prompt("To delete this article, please type 'DELETE THIS ARTICLE' in capital letters:");
        if (userInput === "DELETE THIS ARTICLE") {
            // If the user input matches the required text, proceed with the deletion
            window.location.href = '/article/admin/delete/' + articleId;
        } else {
            // If the user input doesn't match, show an alert
            alert("Invalid input. Please type 'DELETE MY ARTICLE' in capital letters to delete the article.");
        }
    }

    function confirmUnBlock(articleId) {
        var userInput = prompt("To unblock this article, please type 'UNBLOCK THIS ARTICLE' in capital letters:");
        if (userInput === "UNBLOCK THIS ARTICLE") {
            // If the user input matches the required text, proceed with the deletion
            window.location.href = '/article/admin/unblock/' + articleId;
        } else {
            // If the user input doesn't match, show an alert
            alert("Invalid input. Please type 'DELETE MY ARTICLE' in capital letters to delete the article.");
        }
    }
</script>